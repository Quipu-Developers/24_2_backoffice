{
  "openapi": "3.0.0",
  "info": {
    "title": "forum API",
    "version": "0.0.1",
    "description": "quipu forum API용 Swagger"
  },
  "paths": {
    "/auth/login": {
      "post": {
        "summary": "로그인",
        "description": "BO에 로그인",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "description": "사용자가 값을 입력하지 않아도, 항상 admin이라는 값으로 오도록 설정해주세요",
                    "example": "admin"
                  },
                  "password": {
                    "type": "string",
                    "description": "비밀번호",
                    "example": "quipuadmin0316@!"
                  }
                },
                "required": ["username", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "로그인 완료",
            "content": {
              "application/json": {
                "example": {
                  "message": "로그인 성공"
                }
              }
            }
          },
          "401": {
            "description": "비밀번호 틀림",
            "content": {
              "application/json": {
                "example": {
                  "message": "비밀번호가 틀림"
                }
              }
            }
          },
          "500": {
            "description": "서버 에러",
            "content": {
              "application/json": {
                "example": {
                  "message": "서버 에러"
                }
              }
            }
          }
        }
      }
    }
  }
}
